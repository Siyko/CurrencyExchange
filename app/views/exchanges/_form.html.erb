<%= simple_form_for @resource do |f| %>
  <%= f.input :amount, label: 'Enter the amount', required: true, input_html: { min: 1 } %>
  <%= f.input :base_currency, selected: [ "EUR" ], collection: Exchange.base_currencies.keys,required: true %>
  <%= f.input :exchange_currency, selected: [ "USD" ], collection: Exchange.exchange_currencies.keys,required: true %>
  <%= f.input :exchange_date, as: :string, label: 'Enter date', required: true %>
  <%= f.button :submit %>
<% end %>
