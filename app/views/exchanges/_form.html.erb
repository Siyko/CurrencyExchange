<%= simple_form_for @resource do |f| %>
  <div class="">
    <div class="form-group">
      <%= f.label :amount, class: 'col-sm-2 control-label' %>

      <div class="col-sm-2">
        <%= f.number_field :amount, class: 'col-sm-10 form-control', required: true, min: 1 %>

        <%= f.error :amount %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :base_currency, class: 'col-sm-2 control-label' %>

      <div class="col-sm-2">
        <%= f.select :base_currency, Exchange.base_currencies.keys, { required: true, include_blank: false }, { class: 'form-control' } %>

        <%= f.error :base_currency %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :exchange_currency, class: 'col-sm-2 control-label' %>

      <div class="col-sm-2">
        <%= f.select :exchange_currency, Exchange.exchange_currencies.keys, { required: true, include_blank: false }, { class: 'form-control' } %>

        <%= f.error :exchange_currency %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :duration, class: 'col-sm-2 control-label' %>

      <div class="col-sm-2">
        <%= f.number_field :duration, class: 'col-sm-10 form-control', required: true, min: 1, max: 365 %>

        <%= f.error :duration %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
        or
        <%= link_to 'Cancel', exchanges_path %>
      </div>
    </div>
    <%#= f.input :amount, label: 'Enter the amount', required: true, input_html: { min: 1 }, class: 'form-control' %>
    <%#= f.input :base_currency, selected: [ "EUR" ], collection: Exchange.base_currencies.keys, required: true, class: 'form-control' %>
    <%#= f.input :exchange_currency, selected: [ "USD" ], collection: Exchange.exchange_currencies.keys,required: true %>
    <%#= f.input :duration, input_html: { min: 1, max: 365 }, label: 'Enter duration(days)', required: true %>
    <%#= f.button :submit, class: 'btn btn-primary btn-lg btn-success' %>
  </div>
<% end %>
